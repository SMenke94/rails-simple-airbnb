<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>All our Flats (<%= @flats.count %>)</h1>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-xs-4">
      <div class="card flats-card">
        <!-- <div class="flat-card-image" style=""></div> -->
        <div class="card flats-content">
          <h4><%= flat.name %></h4>
          <p><%= flat.address %></p>
          <div class="flats-details">
            <i class="fas fa-users"></i><span><%= flat.number_of_guests %></span>
            <i class="fas fa-euro-sign"></i><span><%= flat.price_per_night %></span>
          </div>
        </div>
        <div class="card flats-actions">
          <%= link_to "More info", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat) %>
          <%= link_to "Remove", flat_path(flat), method: :delete %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>


